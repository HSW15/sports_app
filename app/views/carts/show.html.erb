<body class="cartlist">



<div class="cart">
    <div class="cart-top">
      <h3 class="cart-top-title"style="margin-top:30px">Shopping Cart</h3>
      <div class="cart-top-info"style="margin-top:-9px;"><%=@order_items.count%> items</div>
      </div>
<br><br><br>
  <ul>



<% if @order_items.any? %>
<% @order_items.each do |item| %>

<li class="cart-item">
  <%=link_to order_item_path(item.id), method: :delete do %>
  <i class="fa fa-window-close" aria-hidden="true" style="color:white;position:absolute;top: 5px;right: 6px;"></i>
  <% end %>
  <span class="cart-item-pic">
 <img src="<%=item.product.photos%>">
 </span>
 <%= item.product.name %>
 <span class="cart-item-desc">Quantity: <%= item.quantity %></span>
 <span class="cart-item-price"> <%= number_to_currency (item.product.price * item.quantity)%></p></span>
 <!-- <%= link_to "Delete", order_item_path(item), :data => {:confirm => "You sure?", :method => "delete"}, style:"font-size:8px;" %> -->

</li>
<%end%>
    </ul>


  <div class="cart-bottom">
      Total:  <%= number_to_currency current_order.total_price %>
      <!-- <a href="" class="cart-button">Continue</a> -->
      <%= link_to "Continue", current_user, class:"cart-button", style:"margin-left:0px;"%>
    </div>
    <% else %>
      <p>Your shopping cart is empty.</p>
    <% end %>

</body>
